<% include partials/header %>
<% include partials/blogHeader %>

<div class="container" style="margin-top: 66px">
    <div class="row">
        <h1 class="myH1">Edit blog entry: <%= blog.title %></h1>
        <div class="myForm">
            <form action="/blog/<%= blog._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[title]" placeholder="Post title" value="<%= blog.title %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="6" type="text" name="blog[content]" placeholder="Post content"><%= blog.content %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/blog">Go Back</a>
        </div>
    </div>
</div>

<% include partials/footer %>