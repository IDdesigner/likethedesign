<% include partials/header %>
<% include partials/blogHeader %>

<div class="container" style="margin-top: 66px">
    <div class="row">
        <div class="col-lg-6 col-md-offset-3">
            <h1 class="myH1"><%= blog.title %></h1>
            <p class="blogContent"><%- blog.content %></p>
            <% if(currentUser) { %>
            <a class="btn btn-success btn-sm" href="/blog/<%= blog._id %>/edit">Edit</a>
            <form id="delete" action="/blog/<%= blog._id %>?_method=DELETE" method="POST">
                <button class="btn btn-danger btn-sm">Delete</button>
            </form>
            <% }; %>
            <span class="blogDate"><%= blog.created.toDateString() %></span>
        </div>
    </div>
</div>

<% include partials/footer %>